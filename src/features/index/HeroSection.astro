---
import { getTranslations, type Language } from '../../i18n';

interface Props {
  language?: Language;
}

const { language = 'de' } = Astro.props;
const t = getTranslations(language);
---

<section class="hero" id="home">
  <div class="hero-grid">
    <div class="hero-text">
      <div class="section-tag">{t.index.hero.tag}</div>
      <h1>{t.index.hero.title}</h1>
      <p>{t.index.hero.p1}</p>
      <p>{t.index.hero.p2}</p>
      <div class="cta-row">
        <a href="#kontakt" class="cta">{t.index.hero.ctaJoin}</a>
        <a href="#audio-beispiele" class="cta cta-secondary">{t.index.hero.ctaAudio}</a>
      </div>
    </div>
    <div class="hero-img">
      <img src="/images/g4.jpg" alt={t.index.hero.imageAlt} />
    </div>
  </div>
</section>

<style>
  .hero {
    background: var(--white);
    padding: 90px 40px;
  }

  .hero-grid {
    max-width: 1100px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .hero-text .section-tag { margin-bottom: 10px; }

  .hero-text h1 {
    font-size: clamp(1.8rem, 4vw, 2.8rem);
    font-weight: 800;
    color: var(--teal);
    margin-bottom: 28px;
    line-height: 1.15;
  }

  .hero-text p { color: #555; margin-bottom: 16px; line-height: 1.8; }

  .hero-text .cta {
    display: inline-block;
    margin-top: 20px;
    background: var(--teal);
    color: var(--white);
    font-weight: 700;
    font-size: 14px;
    letter-spacing: 1px;
    padding: 14px 34px;
    border-radius: 40px;
    transition: background .2s, transform .2s;
  }

  .hero-text .cta-row {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
    margin-top: 20px;
  }

  .hero-text .cta-row .cta {
    margin-top: 0;
  }

  .hero-text .cta-secondary {
    background: transparent;
    color: var(--teal);
    border: 2px solid var(--teal);
  }

  .hero-text .cta-secondary:hover {
    background: rgba(39, 93, 111, 0.08);
  }

  .hero-text .cta:hover { background: #1a3d4d; transform: translateY(-2px); }

  .hero-img {
    border-radius: 12px;
    overflow: hidden;
    aspect-ratio: 4/3;
  }

  .hero-img img { width: 100%; height: 100%; object-fit: cover; display: block; }

  @media (max-width: 900px) {
    .hero-grid { grid-template-columns: 1fr; }
    .hero-img { display: none;}
  }
</style>
