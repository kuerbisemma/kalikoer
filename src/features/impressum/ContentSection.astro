---
import { getTranslations, type Language } from '../../i18n';

interface Props {
  language?: Language;
}

const { language = 'de' } = Astro.props;
const t = getTranslations(language);
---

<div class="impressum-content">
  <h2>{t.impressum.headings.provider}</h2>
  <p>Johannes Golda<br />Kalvarienbergstr. 27<br />87509 Immenstadt im Allg√§u</p>

  <h2>{t.impressum.headings.contact}</h2>
  <p>
    Telefon: <a href="tel:+4915128287264">+49 (0) 151 28287264</a><br />
    E-Mail: <a href="mailto:info@kalikoer.com">info@kalikoer.com</a>
  </p>

  <hr class="divider" />

  <h2>{t.impressum.headings.disclaimer}</h2>

  <h2>{t.impressum.headings.contentLiability}</h2>
  <p>{t.impressum.text.contentLiability1}</p>
  <p>{t.impressum.text.contentLiability2}</p>

  <h2>{t.impressum.headings.linksLiability}</h2>
  <p>{t.impressum.text.linksLiability1}</p>
  <p>{t.impressum.text.linksLiability2}</p>

  <hr class="divider" />

  <h2>{t.impressum.headings.copyright}</h2>
  <p>{t.impressum.text.copyright1}</p>
  <p>{t.impressum.text.copyright2}</p>
</div>

<style>
  .impressum-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 64px 40px 100px;
  }

  .impressum-content h2 {
    font-size: 1.1rem;
    font-weight: 800;
    color: var(--teal);
    margin: 40px 0 8px;
    letter-spacing: .3px;
  }

  .impressum-content h2:first-child { margin-top: 0; }
  .impressum-content p { color: #555; margin-bottom: 8px; }

  .impressum-content ul {
    color: #555;
    padding-left: 20px;
    margin-bottom: 8px;
  }

  .impressum-content ul li { margin-bottom: 4px; }

  .impressum-content a {
    color: var(--teal);
    text-decoration: none;
  }

  .impressum-content a:hover { text-decoration: underline; }

  hr.divider {
    border: none;
    border-top: 1px solid #e0dbd5;
    margin: 48px 0;
  }

  @media (max-width: 900px) {
    .impressum-content { padding-left: 24px; padding-right: 24px; }
  }
</style>
