---
import TopBar from '../components/TopBar.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CookieBanner from '../components/CookieBanner.astro';
import { getTranslations, type Language } from '../i18n';

interface Props {
  title: string;
  bodyClass: 'page-index' | 'page-archiv' | 'page-impressum' | 'page-datenschutz';
  activePage?: 'home' | 'archiv' | 'impressum' | 'datenschutz';
  language?: Language;
  languageBasePath?: '/' | '/archiv' | '/impressum' | '/Datenschutz';
  contactHref?: string;
  description?: string;
  canonicalPath?: string;
  noindex?: boolean;
  ogImage?: string;
}

const {
  title,
  bodyClass,
  activePage = 'home',
  language = 'de',
  languageBasePath = '/',
  contactHref = 'index.html#kontakt',
  description = 'kalikoer ist ein Chor in Immenstadt im Allgäu. Wir proben dienstags um 19:10 Uhr und freuen uns auf neue Sängerinnen und Sänger.',
  canonicalPath = '/',
  noindex = false,
  ogImage = '/images/konzert2025.jpg'
} = Astro.props;

const t = getTranslations(language);

const siteUrl = Astro.site ?? new URL('https://kalikoer.com');
const canonicalUrl = new URL(canonicalPath, siteUrl).toString();
const ogImageUrl = new URL(ogImage, siteUrl).toString();
const robots = noindex ? 'noindex, nofollow' : 'index, follow';
const seoKeywords = 'Chor, Chor im Allgäu, Chor in Immenstadt, kalikoer, Singen im Allgäu';
const shouldRenderMusicGroupSchema = bodyClass === 'page-index' && !noindex;

const musicGroupSchema = {
  '@context': 'https://schema.org',
  '@type': 'MusicGroup',
  name: 'kalikoer',
  url: canonicalUrl,
  genre: 'Chormusik',
  description,
  image: ogImageUrl,
  areaServed: [
    {
      '@type': 'City',
      name: 'Immenstadt'
    },
    {
      '@type': 'AdministrativeArea',
      name: 'Allgäu'
    }
  ]
};

const dePath = languageBasePath === '/' ? '/index.html' : `${languageBasePath}.html`;
const allgPath = languageBasePath === '/' ? '/allg.html' : `/allg${languageBasePath}.html`;
---

<!DOCTYPE html>
<html lang={language === 'allg' ? 'de-CH' : 'de'}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={seoKeywords} />
    <meta name="robots" content={robots} />
    <link rel="canonical" href={canonicalUrl} />

    <meta property="og:type" content="website" />
    <meta property="og:locale" content="de_DE" />
    <meta property="og:site_name" content="kalikoer" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImageUrl} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />

    {shouldRenderMusicGroupSchema && (
      <script type="application/ld+json" set:html={JSON.stringify(musicGroupSchema)}></script>
    )}
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body class={bodyClass}>
    <div class="language-chooser-wrap">
      <div class="language-chooser" aria-label={t.languageChooser.label}>
        <span>{t.languageChooser.label}</span>
        <a href={dePath} class={language === 'de' ? 'active' : undefined}>{t.languageChooser.de}</a>
        <a href={allgPath} class={language === 'allg' ? 'active' : undefined}>{t.languageChooser.allg}</a>
      </div>
    </div>
    <TopBar contactHref={contactHref} language={language} />
    <Header activePage={activePage} language={language} />
    <slot />
    <Footer language={language} />
    <CookieBanner language={language} />

    <script is:inline>
      function toggleMenu() {
        document.getElementById('mobileMenu')?.classList.toggle('open');
      }

      document.addEventListener('click', function (e) {
        const menu = document.getElementById('mobileMenu');
        const hamburger = document.querySelector('.hamburger');

        if (!menu || !hamburger) {
          return;
        }

        if (!menu.contains(e.target) && !hamburger.contains(e.target)) {
          menu.classList.remove('open');
        }
      });

      function setCookie(choice) {
        localStorage.setItem('cookieConsent', choice);
        const banner = document.getElementById('cookieBanner');
        if (banner) {
          banner.style.display = 'none';
        }
      }

      if (!localStorage.getItem('cookieConsent')) {
        const banner = document.getElementById('cookieBanner');
        if (banner) {
          banner.style.display = 'block';
        }
      }
    </script>

    <style is:inline>
      .language-chooser-wrap {
        background: var(--dark);
        display: flex;
        justify-content: flex-end;
        padding: 8px 40px;
      }

      .language-chooser {
        display: inline-flex;
        gap: 10px;
        align-items: center;
        color: rgba(255,255,255,.9);
        font-size: 12px;
        letter-spacing: .5px;
      }

      .language-chooser a {
        color: rgba(255,255,255,.75);
        text-decoration: none;
        border: 1px solid rgba(255,255,255,.25);
        border-radius: 999px;
        padding: 4px 10px;
      }

      .language-chooser a.active {
        color: var(--white);
        border-color: #6fa8be;
      }

      @media (max-width: 900px) {
        .language-chooser-wrap {
          padding-left: 24px;
          padding-right: 24px;
        }
      }
    </style>
  </body>
</html>
