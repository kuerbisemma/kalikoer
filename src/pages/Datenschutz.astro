---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroSection from '../features/datenschutz/HeroSection.astro';
import ContentSection from '../features/datenschutz/ContentSection.astro';
import { getTranslations } from '../i18n';

const language = 'de' as const;
const t = getTranslations(language);
---

<BaseLayout
  title={t.pageMeta.datenschutz.title}
  description={t.pageMeta.datenschutz.description}
  canonicalPath="/Datenschutz"
  languageBasePath="/Datenschutz"
  language={language}
  bodyClass="page-datenschutz"
  activePage="datenschutz"
  contactHref="index.html#kontakt"
>
  <HeroSection language={language} />
  <ContentSection language={language} />
</BaseLayout>